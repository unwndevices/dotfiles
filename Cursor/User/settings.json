{
  "window.commandCenter": false,
  "editor.fontFamily": "'Fira Code'",
  "editor.fontLigatures": true,
  "editor.fontWeight": "450", // Regular
  "editor.fontSize": 14,
  "editor.indentSize": 4,
  "workbench.sideBar.location": "right",
  "workbench.colorTheme": "Ros√© Pine",
  "workbench.iconTheme": "rose-pine-icons",
  "workbench.layoutControl.enabled": false,
  "workbench.tree.indent": 18,
  "explorer.confirmDelete": false,
  "editor.formatOnSave": true,
  "files.autoSave": "afterDelay",
  "explorer.confirmDragAndDrop": false,
  "git.openRepositoryInParentFolders": "never",
  "phpCodeSniffer.standard": "Automatic",
  "phpCodeSniffer.autoExecutable": true,
  "phpCodeSniffer.lintAction": "Save",
  "[php]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "obliviousharmony.vscode-php-codesniffer"
  },
  "cursor.cmdk.useThemedDiffBackground": true,
  "workspaceExplorer.workspaceStorageDirectory": "$HOME/dev/",
  "workspaceExplorer.enableCustomIconSearch": false,
  "workbench.editor.showTabs": "none",
  "window.customTitleBarVisibility": "never",
  "extensions.ignoreRecommendations": true,
  "workbench.editor.editorActionsLocation": "hidden",
  "cursor.cpp.enablePartialAccepts": true,
  "window.menuBarVisibility": "toggle",
  "window.titleBarStyle": "native",
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "editor.multiCursorModifier": "ctrlCmd",
  "workbench.panel.opensMaximized": "always",
  "terminal.integrated.hideOnStartup": "always",
  "window.restoreWindows": "none",
  "C_Cpp.intelliSenseCacheSize": 0,
  "editor.quickSuggestionsDelay": 20,
  "clangd.checkUpdates": true,
  "clangd.onConfigChanged": "restart",
  "C_Cpp.formatting": "clangFormat",
  "cursorStats.usageAlertThresholds": [
    30,
    50,
    75,
    90,
    100
  ],
}